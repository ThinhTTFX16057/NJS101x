<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="/css/status.css">
<%- include('../includes/navigation.ejs') %>
    <main>
        <div class="grid">
            <article class="card product-item">
                <form class="product-form" action="/covid/positive" method="POST">
                    <%- include('../includes/staffInfo_covid.ejs') %>
                    <div class="form-control">
                        <label for="datePositive">Ngày dương tính</label>
                        <input type="date" name="datePositive" id="datePositive"%>">
                    </div>
                    <div class="form-control">
                        <label for="treatmentPlace">Nơi điều trị</label>
                        <input type="text" name="treatmentPlace" id="treatmentPlace">
                    </div>
                    <div class="form-control">
                        <label for="treatmentTime">Số ngày nghỉ</label>
                        <input type="number" name="treatmentTime" id="treatmentTime">
                    </div>
                    <button class="btn" type="submit">Submit</button>
                </form>
            </article>
            <article class="card product-table">
                <h2>Dữ liệu dương tính COVID</h2> 
                <div class="table-wrapper">
                    <table class="fl-table">
                        <thead>
                            <tr>
                                <th>Ngày dương tính</th>
                                <th>Nơi điều trị</th>
                                <th>Số ngày nghỉ</th>
                            </tr>
                        </thead>
                            <tbody>
                            <% if (data) { for (let pos of staff.staffPositive) { %>
                                <tr>
                                    <td><%= new Date(pos.datePositive).toLocaleDateString('en-GB') %></td>
                                    <td><%= pos.treatmentPlace %></td>
                                    <td><%= pos.treatmentTime %></td>
                                </tr>
                            <% }} %>
                        </tbody>
                    </table>
                </div>
            </article>
        </div>
    </main>
<%- include('../includes/end.ejs') %>