<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    <main>
        <form class="product-form" action="/addstaff" method="POST">
            <div class='card__image c-avatar'>
                <img class='c-avatar__image' src='https://cdn1.iconfinder.com/data/icons/avatar-2-2/512/Employee-512.png' alt=''>
                <span class='c-avatar__status offline } %>'></span>
            </div>
            <div class="form-control">
                <label for="imageUrl">Hình ảnh</label>
                <input type="text" name="imageUrl" id="imageUrl">
            </div>
            <div class="form-control">
                <label for="companyId">Mã nhân viên</label>
                <input type="text" name="companyId" id="companyId" value="<%= Math.floor((Math.random() * 10000) + 1); %>" readonly>
                <quote style="color:red"><code><em>Mã nhân viên được tạo tự động</em></code></quote>
            </div>
            <div class="form-control">
                <label for="name">Họ tên nhân viên</label>
                <input type="text" name="name" id="name">
            </div>
            <div class="form-control">
                <label for="status">Trạng thái</label>
                <input type="text" name="status" id="status" value="--" readonly>
            </div>
            <div class="form-control">
                <label for="doB">Ngày sinh</label>
                <input type="date" name="doB" id="doB">
            </div>
            <div class="form-control">
                <label for="salaryScale">Hệ số lương</label>
                <input type="number" name="salaryScale" id="salaryScale" step="0.01">
            </div>
            <div class="form-control">
                <label for="startDate">Ngày bắt đầu làm việc</label>
                <input type="date" name="startDate" id="startDate">
            </div>
            <div class="form-control">
                <label for="department">Khoa phòng</label>
                <input type="text" name="department" id="department">
            </div>
            <div class="form-control">
                <label for="annualLeave">Số ngày phép còn lại</label>
                <input type="number" name="annualLeave" id="annualLeave" step="0.125">
            </div>
            
            <button class="btn" type="submit">Add</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>