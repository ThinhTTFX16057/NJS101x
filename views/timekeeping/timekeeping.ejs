<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
<%- include('../includes/navigation.ejs') %>
    <main>
        <% if (staffs.length > 0) { %> 
            <div class="grid">
                <% for (let staff of staffs) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= staff.name %></h1>
                        </header>
                        <hr>
                        <div class="card__image">
                            <img src="<%= staff.imageUrl %>" alt="<%= staff.name %>">
                        </div>
                        <div class="card__content clearfix">
                            <label for="doB">Ngày sinh</label>
                            <input type="date" name="doB" id="doB" value="<%= staff.doB %>" readonly>
                        </div>
                        <div class="card__content clearfix">
                            <label for="department">Khoa phòng</label>
                            <input type="text" name="department" id="department" value="<%= staff.department %>" readonly>
                        </div>
                        <div class="card__content clearfix">
                            <label for="status">Trạng thái</label>
                            <input type="text" name="status" id="status" value="<%= staff.status %>" readonly>
                        </div>
                        <div class="card__content clearfix">
                            <input type="hidden" name="staffId" value="<%= staff._id %>">
                        </div>
                        <div class="card__actions">
                            <a href="/timekeeping/checkin/<%= staff.companyId %>" class="btn">Checkin</a>
                            <a href="/timekeeping/checkout/<%= staff.companyId %>" class="btn">Checkout</a>
                        </div>
                        <div class="card__actions">
                            <a href="/timekeeping/registryleave/<%= staff.companyId %>" class="btn">Registry Leave</a>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Staffs Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>